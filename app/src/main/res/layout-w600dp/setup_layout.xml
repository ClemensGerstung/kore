<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.typingsolutions.kore.setup.SetupActivity">


    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setuplayout_guideline_center"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="364dp"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/help"
            app:layout_constraintRight_toRightOf="@+id/setuplayout_viewpager_contenthost"
            android:layout_marginEnd="@dimen/md"
            app:backgroundTint="@color/primary"
            app:rippleColor="@color/primaryDark"
            app:elevation="@dimen/xs"
            android:clickable="true"
            android:id="@+id/setuplayout_fab_expandBottom"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/setuplayout_viewpager_contenthost"
            app:layout_constraintTop_toTopOf="@+id/setuplayout_viewpager_contenthost"/>

    <android.support.v4.view.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/blue"
            android:id="@+id/setuplayout_viewpager_contenthost"
            app:layout_constraintTop_toTopOf="@+id/setuplayout_guideline_center"
            app:layout_constraintRight_toRightOf="@+id/setuplayout_guideline_verticaldelimiterend"
            app:layout_constraintLeft_toLeftOf="@+id/setuplayout_guideline_verticaldelimiterstart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setuplayout_guideline_verticaldelimiterstart"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setuplayout_guideline_verticaldelimiterend"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

</android.support.constraint.ConstraintLayout>
