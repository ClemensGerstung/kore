<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/Base.AppTheme">
    <android.support.v7.widget.Toolbar
            android:id="@+id/installlayout_toolbar"
            android:clickable="true"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@mipmap/arrow_back"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:title="Create User">
    </android.support.v7.widget.Toolbar>


    <android.support.design.widget.TextInputLayout
            android:id="@+id/createuserlayout_textinputlayout_passwordwrapper"
            android:layout_below="@+id/installlayout_toolbar"
            android:layout_width="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">
        <EditText
                android:id="@+id/createuserlayout_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:textColorHint="#9E9E9E"
                android:hint="Your password"
                android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/createuserlayout_textinputlayout_passwordrepeatwrapper"
            android:layout_below="@+id/createuserlayout_textinputlayout_passwordwrapper"
            android:layout_width="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">
        <EditText
                android:id="@+id/createuserlayout_edittext_repeatpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:textColorHint="#9E9E9E"
                android:inputType="textPassword"
                android:hint="Repeat your password"/>
    </android.support.design.widget.TextInputLayout>

    <com.android.internal.widget.LockPatternView android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_below="@+id/installlayout_toolbar"
                    android:layout_height="4dp"
                    android:background="@drawable/shadow"/>
</RelativeLayout>