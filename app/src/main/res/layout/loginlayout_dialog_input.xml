<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TextInputLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/md"
        app:passwordToggleEnabled="true"
        android:theme="@style/StandardEditText"
        android:paddingStart="@dimen/md"
        android:paddingEnd="@dimen/md">
    <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/loginlayout_string_enterpim"
            android:inputType="number"
            android:id="@+id/loginlayout_edittext_pim"/>
</android.support.design.widget.TextInputLayout>