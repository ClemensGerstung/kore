<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <TextView android:layout_width="match_parent"
              android:layout_height="56dp"
              android:textSize="16sp"
              android:textColor="@color/titlegrey"
              android:gravity="center_vertical"
              android:padding="@dimen/dimen_lg"
              android:text="Select a backup file"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/gdriverestorelayout_recyclerview_items"
            android:layout_width="match_parent"
            android:paddingStart="@dimen/dimen_lg"
            android:paddingEnd="@dimen/dimen_lg"
            android:layout_height="match_parent"/>
</LinearLayout>