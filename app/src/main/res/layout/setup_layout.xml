<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setuplayout_coordinatorlayout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.AppTheme.Setup"
    android:fitsSystemWindows="true"
    android:padding="0dp">

  <ImageView android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:adjustViewBounds="true"
             android:scaleType="centerCrop"
             android:src="@mipmap/setup_background"/>

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="4dp"
      app:cardCornerRadius="0dp"
      app:contentPadding="@dimen/margin16dp"
      android:layout_gravity="bottom">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
      <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:layout_marginBottom="@dimen/margin6dp"
                style="?android:attr/textAppearanceMedium"
                android:text="Let's setup your masterpassword"/>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/setuplayout_textinputlayout_passwordwrapper"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">
        <EditText
            android:id="@+id/setuplayout_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textColorHint="#9E9E9E"
            android:hint="Your password"
            android:inputType="textPassword"/>
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/setuplayout_textinputlayout_passwordrepeatwrapper"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:hintTextAppearance="@android:style/TextAppearance.DeviceDefault.Small">
        <EditText
            android:id="@+id/setuplayout_edittext_repeatpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textColorHint="#9E9E9E"
            android:inputType="textPassword"
            android:hint="Repeat your password"/>
      </android.support.design.widget.TextInputLayout>

      <Button android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Setup"
              android:id="@+id/setuplayout_button_setup"
              android:layout_marginTop="@dimen/margin6dp"
              style="?attr/borderlessButtonStyle"
              android:layout_gravity="end"
              android:textColor="#000"/>
    </LinearLayout>
  </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>