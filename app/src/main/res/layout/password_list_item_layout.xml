<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="?android:attr/selectableItemBackground"
            style="@style/PasswordOverviewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_lg"
            android:paddingEnd="@dimen/dimen_lg"
            android:paddingStart="@dimen/dimen_lg"
            android:clickable="true"
            android:rowCount="4"
            android:columnCount="2">
    <FrameLayout android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_column="0"
                 android:layout_row="0"
                 android:padding="1dp"
                 android:layout_marginEnd="@dimen/dimen_lg"
                 android:layout_rowSpan="3">
        <TextView android:layout_width="38dp"
                  android:layout_height="38dp"
                  android:background="@drawable/circle"
                  android:id="@+id/passwordlistitemlayout_textview_icon"
                  android:gravity="center"
                  android:textColor="#fff"
                  android:padding="0dp"
                  android:layout_margin="0dp"
                  android:textSize="18sp"
                  android:textAllCaps="true"
                  android:text="a"/>
    </FrameLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="0"
              android:layout_column="1"
              android:layout_columnSpan="1"
              android:textSize="14sp"
              android:text="{Password.Program}"
              android:singleLine="true"
              android:ellipsize="end"
              android:textColor="#212121"
              android:id="@+id/passwordlistitemlayout_textview_program"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:singleLine="true"
              android:ellipsize="end"
              android:text="{Password.Username}"
              android:layout_row="1"
              android:layout_column="1"
              android:id="@+id/passwordlistitemlayout_textview_username"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:singleLine="true"
              android:ellipsize="end"
              android:text="{Password.Password}"
              android:layout_row="2"
              android:layout_column="1"
              android:id="@+id/passwordlistitemlayout_textview_password"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_row="3"
                    android:layout_marginTop="17dp"
                    android:background="#e0e0e0"/>
</GridLayout>
