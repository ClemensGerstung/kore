<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
	<TextView android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:textSize="14sp"
			  android:text="{Password.Program}"
			  android:id="@+id/passwordlistitemlayout_textview_program"/>
	<TextView android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:textSize="18sp"
			  android:layout_below="@+id/passwordlistitemlayout_textview_program"
			  android:text="{Password.Username}"
			  android:id="@+id/passwordlistitemlayout_textview_username"/>
	<TextView android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:textSize="18sp"
			  android:layout_below="@+id/passwordlistitemlayout_textview_program"
			  android:layout_toRightOf="@+id/passwordlistitemlayout_textview_username"
			  android:text="{Password.Password}"
			  android:id="@+id/passwordlistitemlayout_textview_password"/>
</RelativeLayout>