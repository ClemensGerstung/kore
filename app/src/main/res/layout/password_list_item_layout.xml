<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="#fff"
                style="@style/passwordOverviewItem">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_marginBottom="4dp"
              android:text="{Password.Program}"
              android:id="@+id/passwordlistitemlayout_textview_program"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/passwordlistitemlayout_textview_program"
                  android:layout_weight="1"
                  android:orientation="horizontal">
        <TextView android:layout_width="match_parent"
                  android:layout_weight="0.5"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textColor="#000"
                  android:text="{Password.Username}"
                  android:id="@+id/passwordlistitemlayout_textview_username"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.5"
                  android:textSize="18sp"
                  android:textColor="#000"
                  android:text="{Password.Password}"
                  android:id="@+id/passwordlistitemlayout_textview_password"/>
    </LinearLayout>

</RelativeLayout>