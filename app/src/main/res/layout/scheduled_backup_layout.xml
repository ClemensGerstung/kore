<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dimen_lg">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:layout_marginTop="@dimen/dimen_lg"
                  android:layout_marginBottom="@dimen/dimen_lg"
                  android:text="Scheduled backup"/>


        <android.support.v7.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/backuplayout_switch_schedulebackup"
                android:text="Schedule backup"/>
        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ael_duration="@integer/animation_duration"
                android:id="@+id/backuplayout_expandablelayout_schedulerwrapper"
                app:ael_interpolator="decelerate"
                android:orientation="vertical">
            <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    app:columnCount="7"
                    android:layout_height="match_parent">
                <CheckBox app:layout_columnWeight="1"
                          android:text="M"/>
                <CheckBox app:layout_columnWeight="1"
                          android:text="T"/>
                <CheckBox app:layout_columnWeight="1"
                          android:text="W"/>
                <CheckBox app:layout_columnWeight="1"
                          android:text="T"/>
                <CheckBox app:layout_columnWeight="1"
                          android:text="F"/>
                <CheckBox app:layout_columnWeight="1"
                          android:text="S"/>
                <CheckBox android:text="S"
                          android:paddingEnd="@dimen/dimen_sm"/>
            </android.support.v7.widget.GridLayout>

            <CheckBox android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Also create local backup"/>
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>