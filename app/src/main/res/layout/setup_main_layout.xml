<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/setuplayout_coordinatorlayout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Base.AppTheme.Setup"
        android:padding="0dp">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:adjustViewBounds="true"
               android:scaleType="centerCrop"
               android:padding="@dimen/zero"
               android:id="@+id/setuplayout_image_background"
               android:src="@mipmap/setup_background"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <ui.ViewPager
                android:id="@+id/setuplayout_viewpager_content"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"/>

        <ImageSwitcher android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:outAnimation="@anim/zoom_slide_out_left"
                       android:inAnimation="@anim/zoom_slide_in_right"
                       android:layout_gravity="center"
                       android:id="@+id/setuplayout_imageswitcher_wrapper"
                       android:layout_above="@id/setuplayout_viewpager_content">
            <!--<ImageView android:layout_width="match_parent"-->
                       <!--android:layout_height="match_parent"-->
                       <!--android:src="@mipmap/clear"/>-->
        </ImageSwitcher>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>