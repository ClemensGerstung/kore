<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/setuplayout_coordinatorlayout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Base.AppTheme.Setup"
        android:fitsSystemWindows="true"
        android:padding="0dp">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:adjustViewBounds="true"
               android:scaleType="centerCrop"
               android:id="@+id/setuplayout_image_background"
               android:src="@drawable/setup_background"/>

    <ui.ViewPager
            android:id="@+id/setuplayout_viewpager_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
</android.support.design.widget.CoordinatorLayout>