<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Base.AppTheme.Detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/passworddetaillayout_appbarlayout_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:elevation="@dimen/dimen_sm">

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/passworddetaillayout_collapsiontoolbarlayout_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:clickable="true"
                app:contentScrim="?attr/colorPrimary"
                app:toolbarId="@+id/passworddetaillayout_toolbar_actionbar">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:clickable="true"
                          android:background="@color/white">
                <TextView android:layout_width="match_parent"
                          android:id="@+id/passworddetaillayout_textview_header"
                          android:layout_height="@dimen/passworddetail_header_height"
                          android:background="@color/graphite"
                          android:gravity="center"
                          android:textAllCaps="true"
                          android:focusable="true"
                          android:textColor="@color/white"
                          android:textSize="@dimen/passworddetial_header_fontsize"
                          android:text="P"/>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dimen_sm"
                        android:layout_marginTop="@dimen/dimen_sm"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_sm"
                        android:theme="@style/standardEditText">
                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:singleLine="true"
                              android:ellipsize="end"
                              android:theme="@style/standardEditText"
                              android:id="@+id/passworddetaillayout_edittext_program"
                              android:hint="Program"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dimen_sm"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_sm"
                        android:theme="@style/standardEditText">
                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:singleLine="true"
                              android:ellipsize="end"
                              android:theme="@style/standardEditText"
                              android:id="@+id/passworddetaillayout_edittext_username"
                              android:hint="Username"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dimen_sm"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_sm"
                        android:theme="@style/standardEditText"
                        android:id="@+id/passworddetaillayout_textinputlayout_password">
                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:inputType="textVisiblePassword"
                              android:singleLine="true"
                              android:ellipsize="end"
                              android:theme="@style/standardEditText"
                              android:id="@+id/passworddetaillayout_edittext_password"
                              android:hint="Password"/>
                </android.support.design.widget.TextInputLayout>
                <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_md"
                        android:textColor="@color/darkgrey"
                        android:padding="@dimen/dimen_md"
                        style="?attr/borderlessButtonStyle"
                        android:text="Generate random password"
                        android:layout_gravity="end"
                        android:id="@+id/passworddetaillayout_button_generatepassword"/>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                    android:id="@+id/passworddetaillayout_toolbar_actionbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:navigationIcon="@mipmap/arrow_back"
                    android:background="@android:color/transparent"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/passworddetaillayout_nestedscrollview_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/dimen_sm"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <android.support.v7.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="@dimen/dimen_md"
                    android:layout_marginBottom="@dimen/dimen_sm">
                <LinearLayout android:layout_width="match_parent"
                              android:minHeight="88dp"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="@dimen/dimen_lg"
                              android:paddingStart="@dimen/dimen_lg"
                              android:paddingEnd="@dimen/dimen_lg"
                              android:paddingBottom="@dimen/dimen_md"
                              android:textStyle="bold"
                              android:textColor="@color/darkgrey"
                              android:text="Passwordhistory"/>
                    <android.support.v7.widget.RecyclerView
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="@dimen/dimen_sm"
                            android:layout_marginTop="@dimen/dimen_sm"
                            android:visibility="gone"
                            android:focusable="false"
                            android:clickable="false"
                            android:id="@+id/passworddetaillayout_recyclerview_passwordhistory"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:paddingTop="@dimen/dimen_sm"
                              android:gravity="center"
                              android:id="@+id/passworddetaillayout_textview_nohistory"
                              android:text="No history yet"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/dimen_sm"
                    android:minHeight="88dp"
                    app:cardUseCompatPadding="true">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingTop="@dimen/dimen_lg"
                          android:paddingStart="@dimen/dimen_lg"
                          android:paddingEnd="@dimen/dimen_lg"
                          android:paddingBottom="@dimen/dimen_md"
                          android:textStyle="bold"
                          android:textColor="@color/darkgrey"
                          android:text="Additional"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:paddingTop="@dimen/dimen_sm"
                          android:gravity="center"
                          android:text="Here could be your idea"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="@dimen/dimen_sm"
                    android:clickable="true"
                    android:layout_marginBottom="@dimen/dimen_sm"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/passworddetaillayout_cardview_delete">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:padding="@dimen/dimen_xl"
                          android:textColor="@color/delete_red"
                          android:text="DELETE"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
