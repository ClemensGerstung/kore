<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/backuprestorelayout_coordinatorlayout_root"
        style="@style/Theme.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/backuprestorelayout_appbaralyout_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
                android:id="@+id/backuprestorelayout_toolbar_actionbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@mipmap/arrow_back"
                app:title="Backup and Restore"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <include layout="@layout/simple_backup_layout"/>

            <include layout="@layout/scheduled_backup_layout"/>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/dimen_lg">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="Restore your passwords"
                              android:textColor="#000"
                              android:layout_marginBottom="@dimen/dimen_lg"
                              style="?attr/textAppearanceListItemSmall"/>
                    <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/dimen_sm"
                            android:id="@+id/backuprestorelayout_textinputlayout_restorepasswordwrapper"
                            android:layout_marginTop="@dimen/dimen_sm"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_sm"
                            android:theme="@style/standardEditText">
                        <EditText android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:singleLine="true"
                                  android:ellipsize="end"
                                  android:theme="@style/standardEditText"
                                  android:inputType="textPassword"
                                  android:id="@+id/backuprestorelayout_edittext_restorepassword"
                                  android:hint="Backup's password"/>
                    </android.support.design.widget.TextInputLayout>
                    <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Load Backup"
                            style="?attr/borderlessButtonStyle"
                            android:textColor="#000"
                            android:id="@+id/backuprestorelayout_button_loadbackup"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>