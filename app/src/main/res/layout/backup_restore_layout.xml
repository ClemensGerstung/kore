<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backuprestorelayout_coordinatorlayout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <android.support.design.widget.AppBarLayout
      android:id="@+id/backuprestorelayout_appbaralyout_wrapper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <android.support.v7.widget.Toolbar
        android:id="@+id/backuprestorelayout_toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@mipmap/arrow_back"
        app:title="Backup and Restore"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
  </android.support.design.widget.AppBarLayout>

  <android.support.v4.widget.NestedScrollView
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      android:layout_marginTop="@dimen/margin">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/margin16dp">
      <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Backup your Passwords now"
                  android:textColor="#000"
                  android:layout_marginBottom="@dimen/margin16dp"
                  style="?attr/textAppearanceListItemSmall"/>
        <GridLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">
          <Button style="?attr/borderlessButtonStyle"
                  android:id="@+id/backuprestorelayout_button_dobackup"
                  android:textColor="#000"
                  android:layout_column="0"
                  android:text="Do Backup"/>
          <ImageButton style="?attr/borderlessButtonStyle"
                       android:id="@+id/backuprestorelayout_imagebutton_expand"
                       android:src="@mipmap/ic_keyboard_arrow_down_white_24dp"
                       android:tint="#000"
                       android:layout_gravity="right"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
        </GridLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/backuprestorelayout_textview_hint"
                  android:textColor="#909090"
                  android:visibility="gone"
                  android:text="You can set a password for the backup. If not set, the backup will use your current masterpassword."/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/backuprestorelayout_textinputlayout_passwordwrapper"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/margin"
            android:theme="@style/standardEditText">
          <EditText android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:theme="@style/standardEditText"
                    android:inputType="textPassword"
                    android:id="@+id/backuprestorelayout_edittext_password"
                    android:hint="Set password"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin"
            android:id="@+id/backuprestorelayout_textinputlayout_repeatpasswordwrapper"
            android:layout_marginTop="@dimen/margin"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/margin"
            android:theme="@style/standardEditText">
          <EditText android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:theme="@style/standardEditText"
                    android:inputType="textPassword"
                    android:id="@+id/backuprestorelayout_edittext_repeatpassword"
                    android:hint="Repeat password"/>
        </android.support.design.widget.TextInputLayout>
      </LinearLayout>
    </android.support.v7.widget.CardView>
  </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>