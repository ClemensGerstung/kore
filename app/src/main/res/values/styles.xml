<resources>
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primaryLight</item>
        <!--<item name="colorControlHighlight">#BBDEFB</item>-->
        <item name="android:itemTextAppearance">@style/CustomMenu</item>
    </style>

    <style name="Base.AppTheme.Setup" parent="Base.AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="CustomMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_lg</item>
    </style>

    <style name="PasswordOverviewItem" parent="@android:style/Widget.ListView">
        <item name="android:color">@color/black</item>
    </style>

    <style name="standardEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/mediumgrey</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/mediumgrey</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="CreatePassword.EditText" parent="standardEditText">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>
