<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.typingsolutions.passwordmanager">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/icon"
            android:label="@string/app_name">

        <service android:name=".services.LoginService"
                 android:process=":LoginService"/>

        <!--<receiver android:name=".receiver.LoginReceiver">-->
            <!--<intent-filter>-->
                <!--<action android:name="com.typingsolutions.passwordmanager.service.LoginService.UPDATE_BLOCKING"/>-->
            <!--</intent-filter>-->
        <!--</receiver>-->

        <receiver android:name=".receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <activity
                android:name=".activities.LoginActivity"
                android:theme="@style/Base.AppTheme"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.CreateUserActivity"
                  android:theme="@style/Base.AppTheme"
                  android:label="Create User"/>

        <activity android:name=".activities.PasswordOverviewActivity"
                  android:theme="@style/Base.AppTheme"
                  android:label="@string/app_name"/>

        <activity android:name=".activities.CreatePasswordActivity"
                  android:theme="@style/Base.AppTheme"
                  android:label="@string/app_name"/>

        <activity android:name=".activities.PasswordDetailActivity"
                  android:theme="@style/Base.AppTheme"
                  android:label="@string/app_name"/>

    </application>

</manifest>
